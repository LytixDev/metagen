--- GIVEN ---
// Arrays can only be defined globally
var array: s32[200]


func main(x: s32, y: s32): s32 begin
    // array indexing can both be the target of an assignment
    array[2] := 20
    // and an expression
    print array[10] + array[10+20]
end
--- EXPECT ---
AST_ROOT 
 AST_LIST 
  AST_TYPED_IDENT_LIST array: s32[200]
 AST_LIST 
  AST_FUNC name=main parameters=x: s32, y: s32
   STMT_BLOCK vars=
    AST_LIST 
     STMT_ASSIGNMENT
      EXPR_BINARY 
       op: LBRACKET
       EXPR_LITERAL array
       EXPR_LITERAL 2
      EXPR_LITERAL 20
     STMT_PRINT
      EXPR_BINARY 
       op: PLUS
       EXPR_BINARY 
        op: LBRACKET
        EXPR_LITERAL array
        EXPR_LITERAL 10
       EXPR_BINARY 
        op: LBRACKET
        EXPR_LITERAL array
        EXPR_BINARY 
         op: PLUS
         EXPR_LITERAL 10
         EXPR_LITERAL 20
 AST_LIST 
 AST_LIST 
 AST_LIST 
