--- GIVEN ---
// checking that comments are ignored

// This program checks the assignment operator

var array: s32[10]

func main(): s32
begin
    var a: s32
    a := 3
    array[2] := 2
    print a
end
--- EXPECT ---
AST_ROOT
 AST_LIST
  AST_TYPED_IDENT_LIST array: s32[10]
 AST_LIST
  AST_FUNC name=main parameters=
   STMT_BLOCK vars=a: s32
    AST_LIST
     STMT_ASSIGNMENT
      EXPR_LITERAL a
      EXPR_LITERAL 3
     STMT_ASSIGNMENT
      EXPR_BINARY
       op: LBRACKET
       EXPR_LITERAL array
       EXPR_LITERAL 2
      EXPR_LITERAL 2
     STMT_PRINT
      EXPR_LITERAL a
 AST_LIST
 AST_LIST
 AST_LIST
